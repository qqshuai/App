<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <com.dinuscxj.progressbar.CircleProgressBar
        android:id="@+id/cpb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:max="60"
        app:background_color="@android:color/white"
        app:draw_progress_text="true"
        app:line_count="60"
        app:line_width="18dp"
        app:progress_background_color="@color/holo_darker_gray"
        app:progress_end_color="@color/holo_red_light"
        app:progress_shader="linear"
        app:progress_start_color="@color/holo_red_light"
        app:progress_stroke_cap="round"
        app:progress_stroke_width="2dp"
        app:progress_text_color="@color/holo_red_light"
        app:progress_text_size="28sp"
        app:style="line" />
</LinearLayout>